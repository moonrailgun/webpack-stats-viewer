{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM"],
    "outDir": "lib",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true
  },
  "include": ["./src/*"]
}
